<section class="followee">
	<p><%= "#{@searched}" %><p>
	<section class="following">
	 	<form class="follow" method='get' action="/users/follow/<%= "#{@searched}" %>">
			<input type="submit" value="Follow">
		</form>
		<form class="followers" method='get' action="/users/followers/<%= "#{@searched}" %>">
			<input type="submit" value="<%= "Followers: #{@followee.followers.size}" %>">
		</form>
	</section>
</section>
<section class="all_peeps"
	<% if @peeps %>
	<% @peeps.each do |peep| %>
		<% reps = peep.replies %>
		<section class="peep" id="<%= peep.id %>">
			<p><%= peep.posted_by %></p>
			<p class="content"><%= peep.content %></p>
			<p class="time"><%= peep.when(peep.created_at) %></p>
			<section class="buttons">
				<form method='get' action="/sessions/reply/<%= "#{peep.id}" %>">
					<input type="submit" value="Reply">
				</form>
				<form method='get' action="/sessions/show_reply/<%= "#{peep.id}" %>">
					<input type="submit" value="<%= "Replies: #{reps.count}" %>">
				</form>
				<form method='post' action="/sessions/favourite/<%= "#{peep.id}" %>">
					<input type="submit" value="<%= "Favourites: #{peep.favourites}" %>">
				</form>
			</section>
		</section>
		<% end %>
		<% else %>
			<%= "There have been no peeps from this Chitterer yet!" %>
	<% end %>
</section>