Welcome to Chitter!

<% if Peep.first %>
<ul>
	<% peeps = Peep.all(order: [:id.desc]) %>
	<% peeps.each do |peep| %>
	<li id="<%= peep.id %>">
		<p><%= peep.posted_by %></p>
		<p><%= peep.content %></p>
		<p><%= peep.when(peep.created_at) %></p>
		<form method='get' action="/sessions/reply/<%= "#{peep.id}" %>">
			<input type="submit" value="Reply">
		</form>
		<form method='get' action="/sessions/show_reply/<%= "#{peep.id}" %>">
			<input type="submit" value="<%= "Replies: #{Reply.all(:peep_id => peep.id).size}" %>">
		</form>
	</li>
	<% end %>
</ul>
<% end %>
